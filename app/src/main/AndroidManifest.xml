<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.example.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
            android:name=".EventApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true">
        <activity
                android:name=".ui.contact.AddContactActivity"
                android:label="@string/title_activity_add_contact"
                android:noHistory="true"
                android:parentActivityName=".ui.group.add.NewGroupActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.example.myapplication.ui.group.add.NewGroupActivity" />
        </activity>
        <activity
                android:name=".ui.group.add.NewGroupActivity"
                android:label="@string/title_activity_new_event"
                android:parentActivityName=".ui.HomeActivity"
                android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
                android:name=".ui.group.detail.GroupDetailActivity"
                android:label="@string/title_activity_group_detail"
                android:parentActivityName=".ui.HomeActivity"
                android:theme="@style/AppTheme.NoActionBar" />
        <activity
                android:name=".ui.HomeActivity"
                android:label="@string/title_activity_home"
                android:theme="@style/AppTheme" />
        <activity
                android:name=".ui.auth.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>